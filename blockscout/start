#!/bin/bash

echo ""
echo "Starting database containers..."
echo "==============================="
docker compose -p bs_database  -f db-docker-compose.yaml up -d  
echo "Waiting 5 seconds for database to start..."
sleep 5

echo ""
echo "Starting chain 0 containers..."
echo "=============================="
docker compose -p bs_chain_0  --env-file ./envs/chain-0.env -f common-docker-compose.yaml up -d

echo ""
echo "Starting chain 1 containers..."
echo "=============================="
docker compose -p bs_chain_1  --env-file ./envs/chain-1.env -f common-docker-compose.yaml up -d